    <name>Tripcollection</name>
    <description> Find your hotels and flights.</description>
    <author email="mail@tripcollection.com" href="https://tripcollection.com/">Tripcollection</author>
    <content src="index.html" />
  
	<allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
